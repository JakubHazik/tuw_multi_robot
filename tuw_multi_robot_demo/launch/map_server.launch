<?xml version="1.0"?>

<launch>
    <arg name="room" default="cave" /> 

    <node pkg="map_server" type="map_server" name="map_server_world" args="$(find tuw_multi_robot_demo)/cfg/maps/$(arg room)/map.yaml">
      <remap from="static_map" to="world/static_map"/>
      <remap from="map" to="world/map"/>
      <param name="frame_id" value="world"/>
    </node>
</launch>
